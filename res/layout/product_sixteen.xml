<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/product_image9"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:onClick="showProductInfo"
            android:src="@drawable/montexanic_detail" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/product_image9" >

        <ImageView
            android:id="@+id/title9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/title_necklace7" />

        <LinearLayout
            android:id="@+id/containerPrices9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title9"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/texto_inicio" />

                <TextView
                    android:id="@+id/initial_price_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/barra_inicio"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/texto_precio_actual" />

                <TextView
                    android:id="@+id/price_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/barra_precio_actual"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/last_bidder9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/containerPrices9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bidderTitle9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/text_ultimo_ofertante" />

            <TextView
                android:id="@+id/bidder_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="25dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_bidder9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/dotted_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/offer_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/texto_tuoferta" />

            <TextView
                android:id="@+id/offer9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/barra_tuoferta"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/offer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:onClick="openBiddingDialog"
            android:src="@drawable/bidding_button" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/seekbar9"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/seekBarSlave9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="598dp"
                android:textColor="#089bb2"
                android:textSize="25dp"
                android:textStyle="bold" /> <!-- 63 max / 598 min -->

            <ImageView
                android:id="@+id/image_textodeslice9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/copy_seekbar" />
        </LinearLayout>

        <com.androidtitlan.endeavorsubasta.ui.VerticalSeekBar
            android:id="@+id/seekbar9"
            android:layout_width="70dip"
            android:layout_height="586dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/seekbar_gray"
            android:progressDrawable="@drawable/progress_vertical"
            android:thumb="@drawable/seekbar_thumb"
            android:thumbOffset="15dp" />
    </LinearLayout>

</RelativeLayout>