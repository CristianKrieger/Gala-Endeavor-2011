<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
    	<LinearLayout android:orientation="vertical"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
	    	<EditText 
		        android:id="@+id/biddername"
		        android:hint="Nombre de usuario"
		        android:layout_width="300dp"
		        android:layout_height="wrap_content"/>
		    <EditText 
		        android:id="@+id/bidderpass"
		        android:hint="Password"
		        android:layout_width="300dp"
		        android:layout_height="wrap_content"
		        android:password="true"/>	    
		    <Button 
		        android:id="@+id/search" 
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent" 
		        android:text="Aceptar"
		        android:layout_weight="1.0"
		        android:onClick="returnNamefromBiddingDialog"
		        android:layout_gravity="center_horizontal"/>
	    </LinearLayout>
	    <View android:layout_height="fill_parent"
	        android:background="@drawable/gradientline"
	        android:layout_width="1dp"
	        android:layout_margin="10dp"/>
	    <LinearLayout android:orientation="vertical"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
	    	<EditText android:id="@+id/registro_bidderusername"
		        android:hint="Nombre de Usuario"
		        android:layout_width="300dp"
		        android:layout_height="wrap_content"/>
		    <EditText android:id="@+id/registro_biddername"
		        android:hint="Nombre Completo"
		        android:layout_width="300dp"
		        android:layout_height="wrap_content"/>
		    <EditText android:id="@+id/registro_bidderpass"
		        android:hint="Password"
		        android:layout_width="300dp"
		        android:password="true"
		        android:layout_height="wrap_content"/>
		    <CheckBox 
		        android:id="@+id/termsandconditions"
		    	android:layout_width="300dp"
		    	android:layout_height="wrap_content"
		    	android:checked="false"
		    	android:text="Acepto los tÃ©rminos y condiciones"/>
		    <Button 
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent" 
		        android:text="Aceptar"
		        android:layout_weight="1.0"
		        android:onClick="returnNamefromBiddingDialog"
		        android:layout_gravity="center_horizontal"/>
	    </LinearLayout>
    </LinearLayout>
    <Button 
        android:id="@+id/cancel" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Cancelar"
        android:onClick="cancelBiddingDialog"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>