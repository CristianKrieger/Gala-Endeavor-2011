<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/productOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToProductActivity"
            android:src="@drawable/jaeger_lecoultre_reloj" />

        <ImageView
            android:id="@+id/productTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToProductActivity"
            android:src="@drawable/carlin_vestido" />

        <ImageView
            android:id="@+id/productThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToProductActivity"
            android:src="@drawable/berger_anillo" />
    </LinearLayout>

</LinearLayout>