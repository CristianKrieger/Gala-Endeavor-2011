<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/productOne"
            android:layout_width="361dp"
            android:layout_height="280dp"
            android:onClick="goToProductActivity"
            android:src="@drawable/jaeger_lecoultre_reloj" />

        <ImageView
            android:id="@+id/productTwo"
            android:layout_width="361dp"
            android:layout_height="280dp"
            android:layout_margin="30dp"
            android:onClick="goToProductActivity"
            android:src="@drawable/carlin_vestido" />

        <ImageView
            android:id="@+id/productThree"
            android:layout_width="361dp"
            android:layout_height="280dp"
            android:onClick="goToProductActivity"
            android:src="@drawable/berger_anillo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_row"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/productFour"
            android:layout_width="361dp"
            android:layout_height="280dp"
            android:onClick="goToProductActivity"
            android:src="@drawable/carolina_bolsa" />

        <ImageView
            android:id="@+id/productFive"
            android:layout_width="361dp"
            android:layout_height="280dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:onClick="goToProductActivity"
            android:src="@drawable/brioni_portapasaporte" />

        <ImageView
            android:id="@+id/productSix"
            android:layout_width="361dp"
            android:layout_height="280dp"
            android:onClick="goToProductActivity"
            android:src="@drawable/motorsheaven" />
    </LinearLayout>

</RelativeLayout>