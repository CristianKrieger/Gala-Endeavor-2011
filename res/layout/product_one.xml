<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.androidtitlan.endeavorsubasta.ui.VerticalSeekBar
        android:id="@+id/SeekBar02"
        android:layout_width="50dip"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:progressDrawable="@drawable/progress_vertical"
        android:thumb="@drawable/seek_thumb_wide"
        android:thumbOffset="8dp" />

    <ImageView
        android:id="@+id/productimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/product_activity_watch1" />

    <ImageView
        android:id="@+id/offer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productimage"
        android:layout_marginLeft="106dp"
        android:layout_toRightOf="@+id/productimage"
        android:onClick="openBiddingDialog"
        android:src="@drawable/offer_button" />

</RelativeLayout>